---
import GitHub from "./icons/GitHub.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

// Etiquetas personalizadas para las experiencias
const TAGS = {
  DESIGN: {
    name: "UI/UX Design",
    class: "bg-blue-600 text-white",
  },
  FRONTEND: {
    name: "Frontend Development",
    class: "bg-green-600 text-white",
  },
  ROBOTICS: {
    name: "Robotics",
    class: "bg-red-600 text-white",
  },
  API: {
    name: "APIs & Web Scraping",
    class: "bg-purple-600 text-white",
  },
}

// Lista de experiencias basada en tus proyectos profesionales
const PROJECTS = [
  {
    title: "Hackathon Eneisoft - SUOE",
    description:
      "Lideré el diseño de la interfaz de usuario para el proyecto 'Sistema Único de Organización de Espacios' (SUOE) utilizando Figma, con el objetivo de optimizar la gestión de espacios, asegurando accesibilidad y funcionalidad.",
    link: "", // Agrega un link si tienes un demo o información adicional
    image: "/projects/suoe.webp", // Cambia la ruta de la imagen si tienes una
    tags: [TAGS.DESIGN],
  },
  {
    title: "Byte, el Perrobot",
    description:
      "Colaboré en la creación de un perro robótico multifuncional de código abierto, utilizando impresión 3D para el hardware y un software adaptable con funciones personalizables.",
    link: "", // Agrega un link si tienes un demo o información adicional
    image: "/projects/perrobot.webp", // Cambia la ruta de la imagen si tienes una
    tags: [TAGS.ROBOTICS],
  },
  {
    title: "Hackathon Unimarquinos - BarrioSeguro",
    description:
      "Desarrollé interfaces dinámicas en Figma, HTML, CSS, JavaScript y React, colaborando con el equipo backend para optimizar la integración. También gestioné el hosting con Hostinger y la configuración de proxy con Cloudflare.",
    link: "", // Agrega un link si tienes un demo o información adicional
    image: "/projects/barrioseguro.webp", // Cambia la ruta de la imagen si tienes una
    tags: [TAGS.FRONTEND],
  },
  {
    title: "Ideatón UNMSM - Red San Marcos",
    description:
      "Formé parte del equipo ganador de la Ideatón 2024 gracias al desarrollo de 'Red San Marcos', una funcionalidad que centralizó noticias universitarias usando web scraping y APIs.",
    link: "", // Agrega un link si tienes un demo o información adicional
    image: "/projects/redsanmarcos.webp", // Cambia la ruta de la imagen si tienes una
    tags: [TAGS.API],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
      <div class="w-full md:w-1/2">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <img alt={title} class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
        </div>
      </div>

      <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
          {title}
        </h3>
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
          <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
          {link && (
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            </footer>
          )}
        </div>
      </div>
    </article>
    ))
  }
</div>



